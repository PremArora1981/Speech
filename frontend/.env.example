# Frontend Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# API CONFIGURATION
# ============================================================================
# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000

# WebSocket URL (usually same as API base but with ws:// or wss://)
VITE_WS_BASE_URL=ws://localhost:8000

# API Key for backend authentication
VITE_API_KEY=your_api_key_here

# ============================================================================
# ENVIRONMENT
# ============================================================================
VITE_ENVIRONMENT=development  # development, staging, production

# ============================================================================
# FEATURE FLAGS
# ============================================================================
VITE_ENABLE_TELEPHONY=false
VITE_ENABLE_RAG=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_COST_TRACKING=true

# ============================================================================
# DEFAULT SETTINGS
# ============================================================================
VITE_DEFAULT_LANGUAGE=hi-IN
VITE_DEFAULT_OPTIMIZATION_LEVEL=balanced
VITE_DEFAULT_TTS_PROVIDER=sarvam

# ============================================================================
# MONITORING (OPTIONAL)
# ============================================================================
# Sentry DSN for error tracking
# VITE_SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID
# VITE_GA_ID=your_ga_id_here
